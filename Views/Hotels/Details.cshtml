@model Assignment_1.Models.Hotel

@{
    ViewData["Title"] = "Hotel Details";
    Layout = "_Layout";
}

<h1>Hotel Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Location:</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Rating:</dt>
        <dd class="col-sm-10">@Model.Rating</dd>

        <dt class="col-sm-2">Price Per Night:</dt>
        <dd class="col-sm-10">@Model.PricePerNight</dd>

        <dt class="col-sm-2">Available:</dt>
        <dd class="col-sm-10">@((Model.IsAvailable ? "Yes" : "No"))</dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-controller="Hotels" asp-action="Index">Back to Hotels</a>
</div>
