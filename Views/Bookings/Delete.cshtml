@model Booking

@{
    ViewData["Title"] = "Delete Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Booking</h1>

<h3>Are you sure you want to delete this booking?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Booking ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        
    </dl>
    <form asp-action="Delete" asp-controller="Bookings" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-controller="Book" class="btn btn-secondary">Cancel</a>
    </form>
</div>
