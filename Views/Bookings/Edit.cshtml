@model Booking

@{
    ViewData["Title"] = "Edit Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Booking</h1>

<form asp-action="Edit" asp-controller="Bookings" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceId"></label>
        <input asp-for="ServiceId" class="form-control" />
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceType"></label>
        <input asp-for="ServiceType" class="form-control" />
        <span asp-validation-for="ServiceType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" class="form-control" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalPrice"></label>
        <input asp-for="TotalPrice" class="form-control" />
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>
    

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
