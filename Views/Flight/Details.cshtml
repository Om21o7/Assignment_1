@model Assignment_1.Models.Flight // Assuming Flight is your model class

@{
    ViewData["Title"] = "Flight Details";
    Layout = "_Layout";
}

<h1>Flight Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Flight Number:</dt>
        <dd class="col-sm-10">@Model.FlightNumber</dd>

        <dt class="col-sm-2">Origin:</dt>
        <dd class="col-sm-10">@Model.Origin</dd>

        <dt class="col-sm-2">Destination:</dt>
        <dd class="col-sm-10">@Model.Destination</dd>

        <dt class="col-sm-2">Departure Time:</dt>
        <dd class="col-sm-10">@Model.DepartureTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Arrival Time:</dt>
        <dd class="col-sm-10">@Model.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Price:</dt>
        <dd class="col-sm-10">@Model.Price</dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" href="@Url.Action("Index", "Flight")">Back to Flights</a>
</div>
